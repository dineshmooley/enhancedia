// This is your Prisma schema file,

generator client{
    provider = "prisma-client-js"
}
datasource db{
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model staff{
      id  String  @id @default(auto()) @map("_id") @db.ObjectId
      email String @unique
      name String
      role String
      password String

}

model student{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    email String @unique
    name String
    password String
    role String
}